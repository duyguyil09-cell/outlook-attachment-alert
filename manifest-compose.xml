<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xsi:type="MailApp">

  <!-- Add-in kimliği aynı kalabilir; UI'den UPDATE yapmak istiyorsan Id ayni olmalı -->
  <Id>9F2E3A64-7E9D-4E34-9E9C-9B7A1A7E00A1</Id>
  <Version>2.1.0.0</Version>
  <ProviderName>Trendyol</ProviderName>
  <DefaultLocale>tr-TR</DefaultLocale>
  <DisplayName DefaultValue="Attachment Guard"/>
  <Description DefaultValue="Compose ekranında buton; göndermede (OnMessageSend) kontrol." />

  <!-- İkonlar -->
  <IconUrl DefaultValue="https://duyguyil09-cell.github.io/outlook-attachment-alert/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://duyguyil09-cell.github.io/outlook-attachment-alert/icon-80.png"/>
  <SupportUrl DefaultValue="https://duyguyil09-cell.github.io/outlook-attachment-alert/home.html"/>

  <!-- Dış URL alanları -->
  <AppDomains>
    <AppDomain>duyguyil09-cell.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <!-- Compose tarafında alıcı/konu/eklere erişmek için ReadWriteItem gerekir -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.8"/>
    </Sets>
  </Requirements>

  <!-- (İsteğe bağlı) okuma görünümünde sağ panel açmak istersen -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://duyguyil09-cell.github.io/outlook-attachment-alert/home.html"/>
        <RequestedHeight>300</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <!-- Add-in Commands + Event-based add-in -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" Version="1.0.0">

    <Hosts>
      <Host xsi:type="MailHost">
        <!-- EVENT TABANLI KISIM: OnMessageSend için çalışma ortamı -->
        <Runtimes>
          <!-- function-file.html'i event runtime olarak kullan -->
          <Runtime resid="residFunctionFileUrl" Lifetime="long"/>
        </Runtimes>

        <!-- GÖNDERMEDE ÇALIŞSIN -->
        <ExtensionPoint xsi:type="LaunchEvent">
          <LaunchEvents>
            <LaunchEvent Type="OnMessageSend" FunctionName="onMessageSendHandler"/>
          </LaunchEvents>
          <!-- Event kodunun bulunduğu sayfa -->
          <SourceLocation resid="residFunctionFileUrl"/>
        </ExtensionPoint>

        <!-- ÜST BAR BUTONU (Compose) -->
        <DesktopFormFactor>
          <FunctionFile resid="residFunctionFileUrl"/>

          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="grpAttachGuard">
                <Label resid="residGroupLabel"/>
                <Icon>
                  <bt:Image resid="residIcon32"/>
                  <bt:Image resid="residIcon80"/>
                </Icon>

                <Control xsi:type="Button" id="btnCheckAttachments">
                  <Label resid="residBtnLabel"/>
                  <Supertip>
                    <Title resid="residBtnTitle"/>
                    <Description resid="residBtnDesc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image resid="residIcon32"/>
                    <bt:Image resid="residIcon80"/>
                  </Icon>
                  <!-- Buton basılınca JS fonksiyonun çalışır -->
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>runAttachmentCheck</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- Kaynaklar -->
    <Resources>
      <bt:Images>
        <bt:Image id="residIcon32" DefaultValue="https://duyguyil09-cell.github.io/outlook-attachment-alert/icon-32.png"/>
        <bt:Image id="residIcon80" DefaultValue="https://duyguyil09-cell.github.io/outlook-attachment-alert/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <!-- HEM buton hem OnMessageSend BURAYI yükler -->
        <bt:Url id="residFunctionFileUrl" DefaultValue="https://duyguyil09-cell.github.io/outlook-attachment-alert/function-file.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="residGroupLabel" DefaultValue="Attachment Guard"/>
        <bt:String id="residBtnLabel"   DefaultValue="Check attachments"/>
        <bt:String id="residBtnTitle"   DefaultValue="Check attachments"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="residBtnDesc" DefaultValue="Ekte dosya var mı kontrol eder ve uyarı gösterir."/>
      </bt:LongStrings>
    </Resources>

    <VersionOverrides/>
  </VersionOverrides>
</OfficeApp>
